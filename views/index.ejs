<%- contentFor('content') %>

<br/>
<br/>


<div class="row">

	<% if(produtos.length) { %>

		<% produtos.forEach(function(produto){%>
	    <div class="col-sm-4 col-lg-4 col-md-4">
	        <div class="thumbnail">
	            <img src="http://placehold.it/320x150" alt="">
	            <div class="caption">
	                <h4 class="pull-right">R$ <%= produto.price %></h4>
	                <h4><a href="/product/<%= produto.ref %>"><%= produto.name %></a></h4>
	                <p><%= produto.description %></p>
	            </div>
	            <div class="ratings">
	                <p class="pull-right">15 reviews</p>
	                <p>
	                    <span class="glyphicon glyphicon-star"></span>
	                    <span class="glyphicon glyphicon-star"></span>
	                    <span class="glyphicon glyphicon-star"></span>
	                    <span class="glyphicon glyphicon-star"></span>
	                    <span class="glyphicon glyphicon-star"></span>
	                </p>
	            </div>
	        </div>
	    </div>
	    <% }) %>

	<% } %>

</div>
